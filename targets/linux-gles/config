target=__PI__
debugFlag = -g -DDEBUG0 -DDEBUG1 -DDEBUG2 -DDEBUG3
librariesDirectory := $(shell pwd)/lib/linux64-gles
includesDirectory := $(shell pwd)/include
sourcesDirectory := $(shell pwd)/source
applicationSuffix =
applicationDirectory := $(shell pwd)/apps
binariesDirectory := $(shell pwd)/bin/linux64-gles
sdlconfig = sdl2-config
compiler = g++
compilerOptions = -Wall -std=c++11 -I$(includesDirectory) -c `$(sdlconfig) --cflags` $(debugFlag) -D$(target)
linker = g++
linkerOptions = `$(sdlconfig) --libs` -lGLESv2
