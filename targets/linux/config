target=__LINUX__
librariesDirectory := $(shell pwd)/lib/linux64
includesDirectory := $(shell pwd)/include
sourcesDirectory := $(shell pwd)/source
applicationSuffix =
applicationDirectory := $(shell pwd)/apps
binariesDirectory := $(shell pwd)/bin/linux64
