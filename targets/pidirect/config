target=__PI__
compileFlags = -D__NO_X_WINDOW__ -DHAVE_LIBBCM_HOST -DUSE_EXTERNAL_LIBBCM_HOST -DUSE_VCHIQ_ARM -DHAVE_LIBOPENMAX=2 -DOMX -DOMX_SKIP64BIT -DUSE_EXTERNAL_OMX -g -DDEBUG0 -DDEBUG1 -DDEBUG2 -DDEBUG3
librariesDirectory := $(shell pwd)/lib/pidirect
includesDirectory := $(shell pwd)/include
sourcesDirectory := $(shell pwd)/source
applicationSuffix =
applicationDirectory := $(shell pwd)/apps
binariesDirectory := $(shell pwd)/bin/pidirect
sdlconfig = sdl2-config
compiler = g++
compilerOptions = -Wall -std=c++11 -I$(includesDirectory) -c -D_REENTRANT $(compileFlags) `$(sdlconfig) --cflags` -D$(target) -I/opt/vc/include -I/opt/vc/include/interface/vcos/pthreads -I/opt/vc/include/interface/vmcs_host/linux
linker = g++
linkerOptions = `$(sdlconfig) --libs` -L/opt/vc/lib -lGLESv2 -lbcm_host -lEGL -lvcos -lvchiq_arm -lopenmaxil -lpthread -lrt
